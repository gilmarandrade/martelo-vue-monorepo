{
    "name": "Martelo Devtools Extension",
    "description": "Martelo Devtools Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_icon": "icon.png"
    },
    "devtools_page": "devtools.html",
    "host_permissions": [
            "https://*/*",
            "http://*/*"
    ],
    "background": {
        "service_worker": "workers/background.js",
        "type": "module"
    }
  }